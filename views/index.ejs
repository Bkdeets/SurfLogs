  <style type="text/css">

  .body {
      font-family: Helvetica Neue;
  }
  .navbar-brand{
    font-weight: bold;
    font-size: 30px;
  }
  #main {
    margin-top: 10px;
    width:1000px;
  }
  #nav_bar {
    width:1000px;
    margin-left: -15px;
    background-color: #8FDBF2;
    border-radius: 10px;
  }
  .each_col{
    margin-top: 8px;
    margin-left: 2px;
    position: relative;
  }
   .index_pic {
     width:330px;
     height:280px;
     object-fit: cover;
   }
   .up{
     position:absolute;
     font-size: 12px;
     top:5px;
     left:35px;
     color:white;
     z-index: 2;
     color:#B7FF00;
     font-weight: bold;
   }
   .down{
     position:absolute;
     font-size: 12px;
     top:23px;
     left:35px;
     color:white;
     z-index: 2;
     font-weight: bold;
   }
   .fa-sort-up{
     position:absolute;
     font-size: 40px;
     top:1px;
     left:5px;
     opacity: 0.5;
     color:grey;
     z-index: 1;
   }
   .fa-sort-down{
     position:absolute;
     font-size: 40px;
     top: 3px;
     left:5px;
     opacity: 0.5;
     color:grey;
     z-index: 1;
   }
   .user_pic{
     width:40px;
     height:40px;
     position: absolute;
     bottom: 43px;
     left:7px;
     object-fit: cover;
   }
   #user_name{
     margin-right: 20px;
   }
   #sign_out_tag{
     margin-left: 15px;
   }
   .title{
     font-weight: bold;
   }
   .bigBg {
            /* The image used */
            background-image: url("https://i.imgur.com/KV30LTV.jpg");
            /* Center and scale the image nicely */
            background-position: top;
            background-repeat: no-repeat;
            background-size: 100%;
            width: 100%;
            height: 500px;
        }
    .mainHeader{
        font-size: 45pt;
        color: white;
        padding-top: 100px;
        padding-bottom:10px;
        font-family: Helvetica Neue;
    }
    .explore {
        width: 100%;
        padding: 20px;
        text-align: center;
        vertical-align: middle;
    }
    .transpo {
        background: transparent;
        position:absolute;
        top: 0;
    }
    #form{
      width:300px;
      margin:10px 0;
      background-color: #DFECF0;
      background-color:rgba(223, 236, 240, 0.5);
      margin-top: 20px;
      padding-top: 20px;
      padding-bottom: 20px;
    }
    .join_btn {
        width: 100%;
        margin: 0 auto;
    }
    .h_desc {
        font-size: 20pt;
        color: white;
        font-family: Helvetica Neue;
        font-weight: bold;
    }
    .h_join {
        width: 75%;
        margin: 0 auto;
        border: 2pt solid white;
        font-size: 15pt;
        color: white;
        font-family: Helvetica Neue;
        padding: 5px;
        font-weight:bold;
        transition: 0.3s;
    }
    .h_join:hover {
        background: white;
        color: black;
        text-decoration: none;
    }

    #explore_link{
      text-decoration: none;
    }
  </style>


</head>




<body>
    <nav id="navbar" class="navbar navbar-expand-lg navbar-light transparent" style="position:absolute; top:0; right:0">
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class="column">
                            <div class="row">
                                <a href="/sign_in" class="nav-link topNav" style="color:white; font-family: Helvetica Neue; font-weight:bold;">Sign In</a>
                            </div>

                        </div>
            </li>
        </ul>
        </div>
    </nav>

<!-- First View -->
    <section class="img-responsive bigBg">
        <div class="container">
            <div>
                <a id="explore_link" href="/explore/default"><h3 class="mainHeader">Never forget a session again</h3> </a>
                <a href="/sign_up" class="h_join">Start logging</a>
            </div>
    </section>
<br>

<!-- Navigation -->
<nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-white sticky-top" style="transition: top 0.3s;">
    <div class="container">
        <a class="navbar-brand" href="/">Surf Logs</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/explore/default" class="nav-link">Spot Check</a>
                </li>
                <li class="nav-item">
                    <a href="/sign_up" class="nav-link">Sign Up</a>
                </li>
                <li class="nav-item">
                    <a href="/sign_in" class="nav-link">Sign In</a>
                </li>
                <li class="nav-item">
                    <a href="/about" class="nav-link">About</a>
                </li>
            </ul>
        </div>
    </div>

    <%var user_name=""%>
    <%var sign_out=""%>
    <%if((typeof user) !== "undefined"){ %>
      <% user_name = user.id%>
      <% sign_out="Sign Out"%>
    <%}%>
    <span id="user_name"><a href="/profile"><%=user_name%></a><a id="sign_out_tag" href="/sign_out"><%=sign_out%></a></span>
</nav>

    <div id = "main" class="container">



    <div id="first_row" class="row">
      <% row1.forEach(function(post){ %>
      <div class="each_col">
        <a href="/post_detail/<%=post.post_id%>"><img src="<%= post.image_1 %>" class="rounded index_pic"></a>
        <p><span class="title"><%= post.title %></span><a href="/user_info/<%=post.user_id%>"><img src="<%=post.image%>" class="rounded-circle user_pic"/></a></p>
      </div>
      <% }); %>
    </div>



    <div id="second_row" class="row">
      <% row2.forEach(function(post){ %>
      <div class="each_col">
        <a href="/post_detail/<%=post.post_id%>"><img src="<%= post.image_1 %>" class="rounded index_pic"></a>
        <p><span class="title"><%= post.title %></span><a href="/user_info/<%=post.user_id%>"><img src="<%=post.image%>" class="rounded-circle user_pic"/></a></p>
      </div>
      <% }); %>
    </div>


    <div id="third_row" class="row" >
      <% row3.forEach(function(post){ %>
      <div class="each_col">
        <a href="/post_detail/<%=post.post_id%>"><img src="<%= post.image_1 %>" class="rounded index_pic"></a>
        <p><span class="title"><%= post.title %></span><a href="/user_info/<%=post.user_id%>"><img src="<%=post.image%>" class="rounded-circle user_pic"/></a></p>
      </div>
      <% }); %>
    </div>


  </div>



