<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">


    <title>Post Detail</title>

    <style type="text/css">

      .navbar-brand{
        font-weight: bold;
        font-size: 30px;
      }

      .d-block {

        width:600px;
        height:500px;
        object-fit: cover;

      }


      .comment_row {
      margin-left: 20px;
      margin-top: 8px;
      }

      #image_container{
        width:700px;
        margin: auto 0;
      }

      #main {
        width:1100px;
        margin-left: 18%;
        margin-top: 10px;


      }


      #left_column {
        margin-top:15px;
        width:700px;
        float: left;
        position: relative;

      }

      #right_column{
        margin-top:15px;
        width:380px;
        height: 1000px;
        float: right;
        background-color: #DFECF0;
        border-radius: 10px;


      }

      #creator_pic {
        width:50px;
        height:50px;
        object-fit: cover;
      }

      #detail_block {
        width:360px;
        height:950px;
        margin-left: 10px;
        margin-top: 10px;
        overflow-y: scroll;


      }

      #comment_header{
        margin-left: 20px;
        margin-top: 10px;
      }

      #commenter_pic {
        width:40px;
        height:40px;
        object-fit: cover;
      }

      .each_line{
        margin-left: 10px;
        margin-top: 15px;

      }

      #comment_container {
        float:left;
        background-color:#DFECF0;
        width:700px;
        height:485px;
        margin-top: 15px;
        border-radius: 10px;
        overflow-y: scroll;
        position: relative;


      }

      #nav_bar{
        background-color: #8FDBF2;
        border-radius: 10px;
      }

      #user_name{
        margin-left: 10px;
      }

      #title{
        font-weight: bold;
      }

      #user_name{
        margin-right: 20px;
      }

      #sign_out_tag{
        margin-left: 15px;
      }

      #vote_button{
        position: absolute;
        right:20px;
        bottom: 20px;

      }

      .options{
        margin-left:5px;
      }

      .fa-chevron-circle-up{
        color:#B7FF00;
        margin-left: 10px;
      }

      .fa-chevron-circle-down{
        color:orange;
        margin-left: 10px;
      }

      .fa-ban{
        color:red;
        margin-left: 10px;
      }

      .vote_icon{
        position: absolute;
        font-size: 40px;
        right:120px;
        bottom: 20px;
      }

      #vote_number_icon_up{
        position: absolute;
        font-size: 50px;
        color:white;
        top:5px;
        left:10px;
      }

      #vote_number_icon_down{
        position: absolute;
        font-size: 50px;
        color:white;
        top:10px;
        left:10px;
      }

      #up_number{
        position:absolute;
        top:7px;
        left:48px;
        color: #B7FF00;
        font-weight: bold;


      }

      #down_number{
        position:absolute;
        top:33px;
        left:48px;
        color: white;
        font-weight: bold;
      }

      #comment_icon{
        position: absolute;
        top:12px;
        right: 12px;
        font-size: 50px;
        z-index: 1;
      }

      #comment_icon_text{
        position: absolute;
        font-size: 9px;
        top:24px;
        right: 15px;
        z-index: 2;
        color: white;

      }

      #popup_form{
        display: none;
        position:absolute;
        z-index: 3;
        right:11px;
        top:11px;

      }

      #text_input_area{

        height:100px;
        width:200px;
        border-radius: 10px;
        border:none;
        outline: none;
        resize: none;
        overflow-y: scroll;

      }

      #close{
        position: absolute;
        right:-9px;
        top:-9px;
        color:red;
      }
      #send{
        position: absolute;
        right:-9px;
        top:90px;

      }


    </style>

  </head>




  <body>

    <div id="main">

      <nav id="nav_bar" class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">Highlander</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">

            <li class="nav-item active">
              <a class="nav-link" href="/explore/default">Explore <span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_in">Sign In</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_up">Sign Up</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>

          </ul>
        </div>
        <%var user_name=""%>
        <%var sign_out=""%>
        <%if((typeof user) !== "undefined"){ %>
          <% user_name = user.id%>
          <% sign_out="Sign Out"%>
        <%}%>
        <span id="user_name"><a href="/profile"><%=user_name%></a><a id="sign_out_tag" href="/sign_out"><%=sign_out%></a></span>
    </nav>





    <div >



      <div id="left_column">


          <div id="image_container" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>

              <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100 rounded" src="<%- post.image_1%>" alt="First slide">
                </div>

              <div class="carousel-item">
                <img class="d-block w-100 rounded" src="<%- post.image_2%>" alt="Second slide">
              </div>

              <div class="carousel-item">
                <img class="d-block w-100 rounded" src="<%- post.image_3%>" alt="Third slide">
              </div>



            </div>

            <a class="carousel-control-prev" href="#image_container" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#image_container" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>



          </div>

          <% var first="";%>
          <% var second="";%>
          <%if((typeof user) !== "undefined"){ %>
              <% var route_1 = "/vote/"+ user.id + "-" + post.post_id + "-up"; %>
              <% var route_2 = "/vote/"+ user.id + "-" + post.post_id + "-down"; %>
              <% var route_3 = "/vote/"+ user.id + "-" + post.post_id + "-red_flag"; %>

              <% first='<div id="vote_button" class="dropdown"><button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">Vote<span class="caret"></span></button>'; %>
              <% second='<ul class="dropdown-menu"><li><i class="fas fa-chevron-circle-up"></i><a class="options" href='+ route_1 + '>Great!</a></li><li><i class="fas fa-chevron-circle-down"></i><a class="options" href='+ route_2 +'>Below Average</a></li><li><i class="fas fa-ban"></i><a class="options" href='+ route_3 +'>Inappropriate!</a></li></ul></div>';%>
          <%}%>



          <%-first + second;%>



          <%if((typeof vote) !=="undefined"){ %>
            <%var vote_icon='';%>

            <%if(vote==="up"){%>
              <%vote_icon='<i class="fas fa-chevron-circle-up vote_icon"></i>';%>
            <%}%>

            <%if(vote==="down"){%>
              <%vote_icon='<i class="fas fa-chevron-circle-down vote_icon"></i>';%>
            <%}%>

            <%if(vote==="red_flag"){%>
              <%vote_icon='<i class="fas fa-ban vote_icon"></i>';%>
            <%}%>

          <%};%>

          <%-vote_icon;%>



          <i id="vote_number_icon_up" class="fas fa-sort-up"></i>
          <i id="vote_number_icon_down" class="fas fa-sort-down"></i>
          <span id="up_number"><%-post.up_vote%></span>
          <span id="down_number"><%-post.down_vote%></span>









      </div>

      <div id="right_column">



          <div id="detail_block" >


          <div class="each_line"><img id="creator_pic" src="<%=post.image%>" class="img-thumbnail" /><a id="user_name" href="/user_info/<%=post.user_id%>"><%=post.user_name%></a></div>
          <div id="title" class="each_line"><p><%=post.title%></p></div>
          <div class="each_line"><p><%=post.created%></p></div>
          <div class="each_line"><p><%=post.description%></p></div>

          </div>

      </div>

      <div id="comment_container" >

        <div id="comment_header">
          <h3>Comments:</h3>
        </div>

        <%var this_user = ""%>

        <%if((typeof user) !== "undefined"){ %>

          <%this_user=user.id%>

          <%var comment_button = '<a href="#" onclick="openForm()"><i id ="comment_icon" class="fas fa-comment-alt"></i><span id="comment_icon_text">Comment</span></a>'%>

        <%};%>

        <%-comment_button;%>






        <div id="popup_form">

          <form action="/new_comment" method="POST" id="comment_form">

            <input type="hidden"  name="user_name" value="<%-this_user%>">
            <input type="hidden" name="post_id" value="<%-post.post_id%>">

            <textarea id="text_input_area" rows="4" name="new_comment"></textarea>


          </form>
          <a href="#" onclick="submitForm()"><i id="send" class="far fa-paper-plane"></i></a>
          <a href="#" onclick="closeForm()"><i id="close" class="fas fa-times-circle"></i></a>
        </div>



        <%comments.forEach(function(comment){ %>


        <div class="comment_row">
          <a href="/user_info/<%=comment.user_id%>"><img id="commenter_pic" class="rounded" src="<%=comment.image%>"/></a>
          <a href="/user_info/<%=comment.user_id%>"><%=comment.user_name%> </a>
          <p>
            - <%=comment.comment%> - <%=comment.created%>

          </p>

        </div>


        <%  }); %>

      </div>

      </div>

    </div>


    <script>

      function openForm() {
        document.getElementById("popup_form").style.display = "block";
      }

      function closeForm() {
        document.getElementById("popup_form").style.display = "none";
      }

      function submitForm() {
        document.getElementById('comment_form').submit();
      }

    </script>






    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
